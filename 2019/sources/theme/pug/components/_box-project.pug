//- Project

mixin project-classic( obj )
	// Project Classic
	article.project-classic&attributes( attributes )
		a.project-classic-figure( href= links.project ): +img( obj.img )
		.project-classic-caption
			h5.project-classic-title: a( href= links.project )= obj.title
			.project-classic-location
				span.icon.mdi.mdi-map-marker
				span= obj.location
			p.project-classic-text= obj.text