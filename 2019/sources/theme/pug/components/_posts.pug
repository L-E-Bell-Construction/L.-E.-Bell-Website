mixin post-classic( obj )
	// Post Classic
	article.post.post-classic&attributes( attributes )
		.post-classic-figure: +img( obj.img )
		.post-classic-content
			p.post-classic-title
				if( obj.blogPost == true )
					= obj.title
				else
					a( href= links.post )= obj.title
		time.post-classic-time( datetime= obj.time.datetime )= obj.time.datetext

mixin post-modern( obj )
	// Post Modern
	article.post.post-modern&attributes( attributes )
		if( obj.img )
			+img( obj.img ).post-modern-image
		.post-modern-content
			.post-modern-center
				if( obj.video )
					.post-modern-play-2: a.icon.mdi.mdi-play( data-lightgallery='item', href= obj.video )
				else
					.post-modern-badge= obj.tag ? obj.tag : 'News'
				p.post-modern-title: a( href= links.post )= obj.title
			.group-xmd
				.post-modern-views
					span.icon.mdi.mdi-eye
					span= obj.views ? obj.views : '253'
				.post-modern-time
					if( obj.time )
						time( datetime= obj.time.datetime )= obj.time.datetext
					else
						time( datetime='2019-04-20' ) April 20, 2019
		.post-modern-dummy

