//- Countdown
	@param {object} data
	@param {string} data.to
	@param {string} [data.from]
	@param {string} [data.count]

mixin countdown( data )
	.countdown.countdown-wrap( data-countdown data-from= data.from data-to= data.to data-count= data.count )
		each item in data.array
			- var attrProgress = {}; attrProgress[ 'data-progress-'+ item ] = '';
			- var attrCounter = {}; attrCounter[ 'data-counter-'+ item ] = '';
			.countdown-circle( class= 'countdown-' + item.toLowerCase() )
				.countdown-number
					svg.countdown-circle( x='0', y='0', width='136px', height='136px', viewbox='0 0 100 100' )&attributes( attrProgress )
						circle.countdown-bg( cx= 50, cy = 50, r= 41 )
						circle.countdown-fg.clipped( cx= 50, cy = 50, r= 48 )
					.countdown-overlay
						h4.countdown-counter&attributes( attrCounter ) 00
				h6.countdown-heading= item