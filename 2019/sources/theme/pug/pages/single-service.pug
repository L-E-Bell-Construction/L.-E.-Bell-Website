extends  ../_skeleton

//- Includes
include ../sections/_header-classic
include ../sections/_footer-classic
include ../components/_box-services
include ../components/_card

block variables
	-
		var
			activeCategory = 'pages',
			pageName = 'Single Service';

block page
	// Page Header
	+navbar-classic

	+breadcrumbs({
		category: activeCategory,
		path: [ pageName ],
		bgImage: 'bg-services'
	})

	// Services
	section.section.section-sm.section-first.bg-default.text-left
		.container
			.row.row-60
				.col-md-7.col-xl-8: .single-service
					+img( 'single-service-1-770x426' )
