				.col-md-5.col-xl-4
					.aside.aside-services
						.row.row-60
							.aside-item.col-12
								h5.aside-services-title Solutions for your business
								ul.list-category
									li.list-category-item: a.active( href='#' ) All services
									li.list-category-item: a( href='#' ) Architectural Design
									li.list-category-item: a( href='#' ) Construction
									li.list-category-item: a( href='#' ) Quality control
									li.list-category-item: a( href='#' ) equipment rental
									li.list-category-item: a( href='#' ) Green energy
									li.list-category-item: a( href='#' ) General Contracting

							.aside-item.col-sm-6.col-md-12
								h5.aside-services-title Our contacts
								include ../sections/_box-contacts

							.aside-item.col-sm-6.col-md-12
								h5.aside-services-title Our brochure
								a.button.button-lg.button-icon.button-icon-left.button-primary.button-winona( href='contacts.html' )
									span.icon.mdi.mdi-download
									span Download


	// Contact us
	section.section.section-sm.section-last.bg-default.text-left
		.container: .row: .col-lg-10.col-xl-8
			h4 Any questions? Contact us
			form.rd-form.rd-mailform
				.row.row-20.gutters-20
					.col-md-6: .form-wrap
						input.form-input( id='contact-your-name-4', type='text', name='name', data-constraints='@Required' )
						label.form-label( for='contact-your-name-4' ) Your Name*
					.col-md-6: .form-wrap
						input.form-input( id='contact-email-4', type='email', name='email', data-constraints='@Email @Required' )
						label.form-label( for='contact-email-4' ) Your E-mail*
					.col-md-6: .form-wrap
						input.form-input( id='contact-company-name-4', type='text', name='name', data-constraints='@Required' )
						label.form-label( for='contact-company-name-4' ) Your Company Name*
					.col-md-6: .form-wrap
						input.form-input( id='contact-phone-4', type='text', name='phone', data-constraints='@Numeric' )
						label.form-label( for='contact-phone-4' ) Your Phone*
					.col-12: .form-wrap
						label.form-label( for='contact-message-4' ) Your message
						textarea.form-input.textarea-lg( id='contact-message-4', name='message', data-constraints='@Required' )
				button.button.button-primary.button-winona( type='submit' ) Send request


	// Subscribe to Our Newsletter
	include ../sections/_section-newsletter

	// Page Footer
	+footer-classic
