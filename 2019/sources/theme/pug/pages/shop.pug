extends  ../_skeleton

//- Includes
include ../sections/_header-classic
include ../sections/_footer-classic
include ../components/_product
include ../components/_pagination

block variables
	-
		var
			activeCategory = 'shop',
			pageName = 'Shop';

block page
	// Page Header
	+navbar-classic

	+breadcrumbs({
		category: activeCategory,
		path: [ pageName ],
		bgImage: 'bg-shop'
	})

	// Section Shop
	section.section.section-lg.bg-default.text-md-left
		.container
			.row.row-60
				.col-lg-4.col-xl-3
					.aside.row.row-60
						.aside-item.col-sm-6.col-lg-12
							h6.aside-title Category
							ul.list-marked-2
								li: a( href='#' ) Carpentry
								li: a( href='#' ) Metalworking
								li: a( href='#' ) Construction
							// RD Search Form
							form.form-search.rd-search.form-search( action='search-results.html', method='GET' )
								.form-wrap
									label.form-label( for='search-form' ) Search..
									input#search-form.form-input( type='text', name='s', autocomplete='off' )
									button.button-search.fl-bigmug-line-search74( type='submit' )
						.aside-item.col-sm-6.col-lg-12.order-lg-2
							h6.aside-title Popular Product
							.list-popular-product
								.list-popular-product-item
									+product-minimal({
										img: 'product-mini-1-106x104',
										title: 'Spring Collet Set',
										price: '235'
									})
