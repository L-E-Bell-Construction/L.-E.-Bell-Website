									+product-minimal({
										img: 'product-mini-2-106x104',
										title: 'Wood Router',
										price: '290'
									})
						.aside-item.col-12
							h6.aside-title Filter by Price
							// RD Range
							.rd-range(
							data-min='0',
							data-max='999',
							data-min-diff='100',
							data-start='[66, 335]',
							data-step='1',
							data-tooltip='false',
							data-input='.rd-range-input-value-1',
							data-input-2='.rd-range-input-value-2'
							)
							.group-md.group-justify
								div
									button.button.button-xs.button-gray-8.button-winona( type='button' ) Filter
								div
									.rd-range-wrap
										.rd-range-title Price:
										.rd-range-form-wrap
											input.rd-range-input.rd-range-input-value-1( type='text', name='value-1' )
											span $
										.rd-range-divider
										.rd-range-form-wrap
											input.rd-range-input.rd-range-input-value-2( type='text', name='value-2' )
