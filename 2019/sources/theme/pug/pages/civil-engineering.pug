extends  ../_skeleton

//- Includes
include ../sections/_header-corporate
include ../sections/_footer-creative
include ../components/_box-icon
include ../components/_box-services
include ../components/_thumbnail
include ../components/_quote
include ../components/_card
include ../components/_counters
include ../components/_posts

block variables
	-
		var
			pageName = 'Civil Engineering',
			style = '5';

		logo = {
			default: 'logo-default-5-233x102.png',
			inverse: 'logo-inverse-5-233x102.png',
			name: 'Architectus'
		};

block page

	// Page Header and Swiper
	section.section.swiper-custom-container-3
		+navbar-corporate

		include ../sections/_section-slider-5

	// Our services
	section.section.section-inset-6.bg-default
		.container
			h4.wow.fadeInLeft Our services
			.row.row-xs.no-md-gutters.justify-content-center.bordered-2
				.col-sm-6.col-lg-4
					.services-modern
						+box-icon-modern({
							icon: 'mdi mdi-math-compass',
							title: 'Architectural Design',
							text: 'We provide architectural design services for building & construction industry.'
						}).wow.fadeInDown
				.col-sm-6.col-lg-4
					.services-modern
						+box-icon-modern({
							icon: 'mdi mdi-format-paint icon-32',
							title: 'Reconstruction',
							text: 'Our professional reconstruction solutions are very reliable and dependable.'
						}).wow.fadeInDown( data-wow-delay='.1s' )
				.col-sm-6.col-lg-4
					.services-modern
						+box-icon-modern({
							icon: 'mdi mdi-worker icon-39',
							title: 'General Contracting',
							text: 'We can offer a reliable general contractor for all your construction needs.'
						}).wow.fadeInDown( data-wow-delay='.2s' )
				.col-sm-6.col-lg-4
					.services-modern
						+box-icon-modern({
							icon: 'mdi mdi-comment-processing-outline icon-30',
							title: 'Consulting',
							text: 'Our experts are always ready to consult you on any civil engineering related topic.'
						}).wow.fadeInUp( data-wow-delay='.2s' )
				.col-sm-6.col-lg-4
					.services-modern
						+box-icon-modern({
							icon: 'mdi mdi-leaf icon-28',
							title: 'Green Construction',
							text: 'Green construction reduces expenses and negative impact on environment.'
						}).wow.fadeInUp( data-wow-delay='.1s' )
				.col-sm-6.col-lg-4
					.services-modern
						+box-icon-modern({
							icon: 'mdi mdi-thumb-up-outline icon-30',
							title: 'Quality Control',
							text: 'We control the quality of all our projects, especially the most complex ones.'
						}).wow.fadeInUp


	section.section.bg-image-4
		.container-fluid.container-inset-0: .row.no-gutters
			.col-md-4.col-lg-5.col-xl-6.box-transform-wrap.box-transform-1: .box-transform( style='background-image: url(images/bg-index-12.jpg);' )
			.col-md-8.col-lg-7.col-xl-6.bg-image-3
				#tabs-12.tabs-custom.tabs-custom-3
					.tab-content.tab-content-4.section-inset-7
						#tabs-12-1.tab-pane.fade.show.active
							h4.oh-desktop: span.d-inline-block.wow.slideInLeft 24 years of experience
							p.wow.fadeInRight Since 1994, we have been providing communities and governments worldwide with high-quality civil engineering services.
							.button-wrap.oh-desktop: a.button.button-icon.button-icon-right.button-primary.wow.slideInUp( href='about-us.html' )
								span.icon.mdi.mdi-chevron-right
								| Read more
						#tabs-12-2.tab-pane.fade
							h4 Ensuring the best quality
							p All projects of our engineers are checked for high quality using the latest technologies and innovations in quality control.
							a.button.button-icon.button-icon-right.button-primary( href='#' )
								span.icon.mdi.mdi-chevron-right
								| Read more
						#tabs-12-3.tab-pane.fade
							h4 Developing infrastructure
							p Our global goals are to design, build, and manage projects and programs that unlock opportunities and protect our environment.
							a.button.button-icon.button-icon-right.button-primary( href='#' )
								span.icon.mdi.mdi-chevron-right
								| Read more
					ul.nav.nav-tabs-3
						li.nav-item-3( role='presentation' ): a.nav-link-3.active( href='#tabs-12-1', data-toggle='tab' ): span About us
						li.nav-item-3( role='presentation' ): a.nav-link-3( href='#tabs-12-2', data-toggle='tab' ): span Quality control
						li.nav-item-3( role='presentation' ): a.nav-link-3( href='#tabs-12-3', data-toggle='tab' ): span Our Goals



	// Latest projects
	section.section.section-xl.bg-default.text-center
		.container
			.group-xl.group-sm-justify
				h4.oh-desktop: span.d-inline-block.wow.slideInLeft Why choose us
				.dots-custom
			.owl-carousel.owl-style-3( data-items='1', data-sm-items='2', data-lg-items='3', data-margin='30', data-autoplay='true', data-dots='true', data-animation-in='fadeIn', data-animation-out='fadeOut', data-pagination-class='.dots-custom' )
				+services-creative({
					img: 'services-19-370x230',
					title: 'Modern Technology',
					text: 'Our team uses the latest technologies to design high-quality civil objects.',
					number: '01'
				})
				+services-creative({
					img: 'services-7-370x230',
					title: 'Experienced Team',
					text: 'We are a team of experienced civil engineers working to build a better world.',
					number: '02'
				})
				+services-creative({
					img: 'services-20-370x230',
					title: 'Quality Materials',
					text: 'High-quality materials are the absolute guarantee of building dependable facilities.',
					number: '03'
				})
				+services-creative({
					img: 'services-21-370x230',
					title: 'Powerful Equipment',
					text: 'We use modern & powerful equipment to create efficient and reliable infrastructure.',
					number: '04'
				})


	// Section CTA
	+parallax({
		img: 'bg-index-11',
		innerClass: 'section-sm section-inset-1 context-dark text-md-left'
	})
		.container: .row.row-30.justify-content-center.align-items-center
			.col-sm-10.col-md-7.col-lg-6.col-xl-9
				h5.font-weight-normal.text-transform-none.oh-desktop: span.d-inline-block.wow.slideInUp Creating Efficient Infrastructure Since 1994
			.col-md-5.col-lg-4.col-xl-3.text-md-right.oh-desktop
				a.button.button-outline.button-icon.button-icon-right.wow.slideInDown( href='contacts.html' )
					span.icon.mdi.mdi-chevron-right
					| Get in touch


	// Latest projects
	section.section.section-xl.bg-default.text-center
		.container
			h4.wow.fadeInRight Latest projects
		.container-fluid.container-inset-0
			.row.row-30.row-desktop-8.gutters-8.hoverdir( data-lightgallery='group' )
				.col-sm-6.col-lg-4.col-xxl-3: .oh-desktop
