extends  ../_skeleton

//- Includes
include ../components/_inline-subscribe-form
include ../components/_coundown

block variables
	-
		var
			activeCategory = 'pages',
			pageName = 'Coming Soon';

block title
	title=pageName

block page
	section.section.section-single.box-transform-wrap.novi-background.novi-background.context-dark
		.section-single-inner
			//-Page Header
			include ../sections/_section-header-base-transparent

			//- Page Main
			.section-single-main
				.container
					h4 Weâ€™re Getting Ready To Launch In
					// TimeCircles
					+countdown({
						from: '2019-05-25',
						to: '2019-12-31',
						array: ['Days', 'Hours', 'Minutes', 'Seconds']
					})
					p.big Stay tuned and subscribe to our newsletter
					.form-inline-1
						+inline-subscribe-form({
							button: 'button-lg button-primary'
						}).rd-form-inline-lg.rd-form-inline-spacing-12

